{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"name": "accurtype",
	"license": "MIT",
	"type": "commonjs",
	"author": "e0selmy4v",
	"scripts": {
		"prepare": "husky",
		"commit": "cz",
		"prefmt": "prettier -w .",
		"fmt": "eslint . --fix",
		"test:lint": "eslint test/style.ts --no-eslintrc -c config/eslint.style.js --no-ignore --report-unused-disable-directives",
		"prelint": "prettier -c .",
		"lint": "eslint .",
		"test": "pnpm -F config -F ./utilities/* -F packages test",
		"prebuild": "pnpm lint",
		"build": "pnpm -F ./utilities/* -F packages build"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.6.1",
		"@type-challenges/utils": "^0.1.1",
		"@typescript-eslint/eslint-plugin": "^6.20.0",
		"@typescript-eslint/parser": "^6.20.0",
		"commitizen": "^4.3.0",
		"cz-customizable": "^7.0.0",
		"eslint": "^8.56.0",
		"eslint-config-accurtype-style": "workspace:^",
		"eslint-plugin-expect-type": "^0.3.0",
		"eslint-plugin-markdown": "^3.0.1",
		"husky": "^9.0.10",
		"prettier": "^3.2.5",
		"ts-node": "^10.9.2",
		"typescript": "^4.8.4"
	},
	"prettier": {
		"printWidth": 200,
		"tabWidth": 4,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"jsxSingleQuote": false,
		"trailingComma": "all"
	},
	"config": {
		"cz-customizable": {
			"config": "./config/cz-config.js"
		},
		"commitizen": {
			"path": "node_modules/cz-customizable"
		}
	}
}
